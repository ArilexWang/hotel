@model IEnumerable<hotel_version1._0.HOTEL_ORDER>

@{
    ViewBag.Title = "Index";
}

<h2>消费记录</h2>

@using (Html.BeginForm("Index", "HOTEL_BILL", FormMethod.Post))
{
    <div class="searchBlock">
        顾客姓名: @Html.TextBox("searchString")
        <input type="submit" value="搜索" />
    </div>
}

<table class="table-1">
    <tr>
        <th>
            <strong>ID</strong>
        </th>
        <th>
            <strong>消费总额</strong>
        </th>
        <th>
            <strong>顾客姓名</strong>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.HOTEL_BILL == null)
    {
        break;
    }

    <tr>
 
        <td>
            @Html.DisplayFor(modelItem => item.ORDER_ID)
        </td>
        <td>
            @{
                var totalPrice = item.HOTEL_BILL.ROOM_PRICE + item.HOTEL_BILL.SERVICE_PRICE + item.HOTEL_BILL.ITEM_PRICE;

            }
            @totalPrice
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HOTEL_CUSTOMER.NAME)

        </td>

        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ORDER_ID })
        </td>
    </tr>
}

</table>
