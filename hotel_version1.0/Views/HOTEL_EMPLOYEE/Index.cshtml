@model PagedList.IPagedList<hotel_version1._0.HOTEL_EMPLOYEE>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>职工信息</h2>
<h4 style="margin-top: 5px">
    @Html.ActionLink("SHOW ALL", "Index")
</h4>

@using (Html.BeginForm("Index", "HOTEL_EMPLOYEE", FormMethod.Post))
{
    <div class="searchBlock">
        <div class="search bar1">
            @Html.TextBox("searchString")
            <button type="submit"></button>
        </div>
    </div>
}



<table class="table-1">
    <tr>
        <th>
            
            @using (Html.BeginForm("Sort", "HOTEL_EMPLOYEE", new { message = "EMP_ID" } ,  FormMethod.Post))
            {
                <input type="submit" value="职工号" class="sortInput"  />
            }
        </th>
        <th>
            @using (Html.BeginForm("Sort", "HOTEL_EMPLOYEE", new { message = "NAME" }, FormMethod.Post))
            {
                <input type="submit" value="职工姓名" class="sortInput"  />
            }
        </th>
        <th>
            @using (Html.BeginForm("Sort", "HOTEL_EMPLOYEE", new { message = "EMP_TYPE" }, FormMethod.Post))
            {
                <input type="submit" value="职工部门" class="sortInput"  />
            }
        </th>
        <th>
            @using (Html.BeginForm("Sort", "HOTEL_EMPLOYEE", new { message = "EMP_TEL" }, FormMethod.Post))
            {
                <input type="submit" value="电话号码" class="sortInput"  />
            }
        </th>
        <th>
            @using (Html.BeginForm("Sort", "HOTEL_EMPLOYEE", new { message = "SALARY" }, FormMethod.Post))
            {
                <input type="submit" value="薪资" class="sortInput"  />
            }
        </th>
        <th>
            @using (Html.BeginForm("Sort", "HOTEL_EMPLOYEE", new { message = "BONUS" }, FormMethod.Post))
            {
                <input type="submit" value="奖金" class="sortInput"  />
            }
        </th>
        <th>
            @Html.ActionLink("新建", "Create")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EMP_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMP_TYPE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PHONENUMBER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOTEL_EMPLOYEE_TYPE.SALARY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BONUS)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EMP_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EMP_ID })
            </td>
        </tr>
    }

</table>
每页 @Model.PageSize 条记录，共 @Model.PageCount 页，当前第 @Model.PageNumber 页
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))