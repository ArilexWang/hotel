@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@ViewBag.name

@using (Html.BeginForm("AddUser", "HOTEL_ROOM"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ROOM_ORDER</h4>
        <hr />
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                ORDER_ID：@Html.TextBox("orderID")
            </div>
        </div>

        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Name：@Html.TextBox("name")
            </div>
        </div>

        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tel: @Html.TextBox("tel")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                CheckInTime:@Html.TextBox("checkInTime")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                CheckOutTime: @Html.DropDownList("checkOutList")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Status:@Html.DropDownList("statusList")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                ROOM_NUM:@Html.TextBox("roomNum")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                HOTEL_ID:@Html.TextBox("hotelID")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

